{
    "manifest_version": 3,
    "name": "Pomodoro Timer",
    "description": "Enhance productivity with intentional work and break periods.",
    "version": "1.0.6",
    "action": {
      "default_popup": "./popup/popup.html",
      "default_icon": "./images/light-bulb.png"
    },
    "icons": {
       "128": "./images/light-bulb.png"
    },
    "permissions": [
      "tabs",
      "storage",
      "offscreen",
      "notifications"
    ],
    "background": {
        "service_worker": "background.js"
      }
  }